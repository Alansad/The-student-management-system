<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <a href="/admin/product" class="list-group-item">
                学生信息首页
            </a>
            <a href="/admin/product/add" class="list-group-item active">录入学生信息</a>
            <a href="/admin/product/inputScore" class="list-group-item">
                录入学生成绩</a>

            <a href="/admin/product/search" class="list-group-item">查询学生基本信息</a>

            <a href="/admin/product/searchScore" class="list-group-item">
                查询课程成绩</a>
            <a href="/admin/product/searchteacher" class="list-group-item">
                查询某学生的任课老师</a>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">学生管理
                </li>
                <li class="active">学生信息
                </li>
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    <h1>添加学生信息</h1>
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/product/doAdd" method="post" enctype="multipart/form-data">
                            <ul>
                                <li>  学生学号: <input type="number" name="number"/></li>
                                <li>
                                    学生姓名:<input type="text" name="name"/>
                                </li>
                                <li>
                                    性别:男  <input type="radio" name="sex" value="男" checked="checked"/>
                                    女  <input type="radio" name="sex" value="女"/>
                                </li>
                                <li>
                                    日期:<input type="date" name="date"/>
                                </li>
                                <li>
                                    班级:<br>  <input type="radio" name="class" value="1" checked="checked" />1班
                                    <br>  <input type="radio" name="class" value="2"/>2班
                                    <br>
                                    <input type="radio" name="class" value="3"/>3班
                                </li>
                                <li>
                                    专业:<br>  <input type="radio" name="major" value="计算机科学与技术" checked="checked" />  计算机科学与技术
                                    <input type="radio" name="major" value="心理学"/>   心理学
                                    <input type="radio" name="major" value="经济学"/>  经济学
                                </li>
                                <br/>
                                <button type="submit" class="btn btn-default">提交</button>
                                <h1><%=msg%></h1>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
</body>
</html>